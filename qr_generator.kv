#: kivy 2.1.0
## ------------------------------------------------------------------
## - Font settings in general. All used fonts to be defined here    -
## ------------------------------------------------------------------
#:set fn_title "./fonts/Ubuntu-B.ttf"
#:set fs_title 20

#:set fn_subtitle "./fonts/Ubuntu-B.ttf"
#:set fs_subtitle 16

#:set fn_subsubtitle "./fonts/Ubuntu-B.ttf"
#:set fs_subsubtitle 11

#:set fn_button "./fonts/Ubuntu-BI.ttf"
#:set fs_button 14

#:set fn_text "./fonts/Ubuntu-C.ttf"
#:set fs_text 12

#:set fn_data "./fonts/Ubuntu-LI.ttf"
#:set fs_data 12

## ------------------------------------------------------------------
## - Filelinks to be used globally:                                 -
## ------------------------------------------------------------------

##:set background_image "./images/City_01WP.jpg"
#:set background_image "./images/RenderArt-StoneWallSTRWP.jpg"
#:set phimage_link "./images/MinimalArt-CiytSTRWP.jpg"

## ----------------------------------------------------------------------------------------------
## transitions imported for screenchanges:
## ----------------------------------------------------------------------------------------------
#:import NoTransition kivy.uix.screenmanager.NoTransition
## -----------------------------------------------------------------------------
#:import CardTransition kivy.uix.screenmanager.CardTransition
#:import FadeTransition kivy.uix.screenmanager.FadeTransition
#:import FallOutTransition kivy.uix.screenmanager.FallOutTransition
#:import RiseInTransition kivy.uix.screenmanager.RiseInTransition
#:import SlideTransition kivy.uix.screenmanager.SlideTransition
#:import SwapTransition kivy.uix.screenmanager.SwapTransition
#:import WipeTransition kivy.uix.screenmanager.WipeTransition

## ----------------------------------------------------------------------------------------------
## Root Widget definition: ScreenManager                            ScreenManager       START   -
## ----------------------------------------------------------------------------------------------
AppObjScreenManager:
    id: ThisIsYourROOTWidget
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: background_image
    ScreenIntro:
        id: screen_intro
    ScreenMain:
        id: screen_main

<AppObjScreenManager@ScreenManager>:
    ## transition: NoTransition()
    transition: CardTransition(direction="right", duration=0.05)
    ## transition: FadeTransition(duration=0.1)
    ## transition: FallOutTransition(duration=0.05)    # opposites v
    ## transition: RiseInTransition(duration=0.08)     # opposites ^
    ## transition: SlideTransition()
    ## transition: SwapTransition(duration=.5)
    ## transition: WipeTransition()

## ----------------------------------------------------------------------------------------------
## Root Widget definition: ScreenManager                            ScreenManager       ENDED   -
## ----------------------------------------------------------------------------------------------


<InScreenWindow@BoxLayout>:
    orientation: "vertical"


<ScreenIntro@Screen>:
    name: "screen_intro"
    InScreenWindow:  ## Screen class is a widget, it is not filled up automatically
        id: isw
        TitleLine:
            id: screen_intro_titleline
            size_hint: 1, 0.1                      ##  0.05
            display_title: "Sziller's QR generator"
        NavBar:
            id: navbar
            size_hint: 1, 0.1                      ##  0.05    < 0.10
        OpAreaIntro:
            size_hint: 1, 0.75                       ##  0.9     < 1
            id: opareaintro
        Ribbon:
            id: ribbon_intro
            size_hint: 1, 0.05
            text_ribbon: "Bottom of ScreenIntro"
            image_source: phimage_link

<ScreenMain@Screen>:
    name: "screen_main"
    InScreenWindow:
        TitleLine:
            id: screen_main_titleline
            size_hint: 1, 0.1                      ##  0.05
            display_title: "QR generator"
        NavBar:
            id: navbar
            size_hint: 1, 0.1                      ##  0.05    < 0.10
        OpAreaMain:
            size_hint: 1, 0.75                       ##  0.9     < 1
            id: opareamain
        Ribbon:
            id: ribbon_main
            size_hint: 1, 0.05
            text_ribbon: "Bottom of ScreenMain"
            image_source: phimage_link

<TitleLine@BoxLayout>:
    display_title: "default"
    orientation: "horizontal"
    ScreenTitleLabel:
        font_name: fn_title
        font_size: fs_title
        text: root.display_title

<OperationAreaBox@BoxLayout>:

<OpAreaIntro@OperationAreaBox>:
    orientation: "vertical"
    padding: 20
    BoxLayout:
        orientation: "vertical"
        Label:
            size_hint: 1, 0.1
            text: "Wel-fucking-come to my little app"
        Image:
            id: qr_plot_layout
            size_hint: 1, 0.8
        Button:
            size_hint: 1, 0.1
            text: "change text"
            on_release: root.on_buttonclick_edittext()


<OpAreaMain@OperationAreaBox>:
    orientation: "vertical"
    padding: 20
    BoxLayout:
        orientation: "vertical"
        Label:
            size_hint: 1, 0.2
            text: "Enter string to be converted into QR code"
        TextInput:
            size_hint: 1, 0.6
            id: str_2b_conv
            hint_text: "Please enter sting to be converted into QR code!"
            on_text: root.on_textupdate_textinput(self)
        Button:
            size_hint: 1, 0.2
            id: button_convert
            target: "screen_intro"
            text: "press to convert"
            on_release: root.on_buttonclick_generate_qr()


<NavBar@BoxLayout>:
    id: navbar
    orientation: "horizontal"
    size_hint: 1, 0.05
    ButtonScreenNav:
        id: button_nav_intro
        target: "screen_intro"
        disabled: True
        text: "welcome to visor"
        on_release: root.on_release_navbar(self)
    ButtonScreenNav:
        id: button_nav_main
        target: "screen_main"
        text: "transaction handler"
        on_release: root.on_release_navbar(self)

<Ribbon@BoxLayout>:
    text_ribbon: "N/A"
    image_source: None
    orientation: "horizontal"
    Label:
        size_hint: 0.95, 1
        text: root.text_ribbon
    AsyncImage:
        keep_ratio: False
        allow_stretch: True
        size_hint: 0.05, 1
        source: root.image_source

#   ---------------------------------------------------------------------
#   - Button:                                                   START   -
#   ---------------------------------------------------------------------

<ButtonScreenNav@Button>:
    font_name: fn_button
    font_size: fs_button
    target: ""
    text_size: self.size
    color: (1, 1, 1)
    padding: (2, 2)
    text: "ToggleButton"
    halign: 'center'  ## center, right, left
    valign: 'middle'  ## middle, top, bottom

<ButtonDroneNav@Button>:
    font_name: fn_button
    font_size: fs_button
    target: ""
    text_size: self.size
    color: (1, 1, 1)
    padding: (2, 2)
    text: ""
    halign: 'center'  ## center, right, left
    valign: 'middle'  ## middle, top, bottom

#   ---------------------------------------------------------------------
#   - Button:                                                   ENDED   -
#   ---------------------------------------------------------------------


